<?xml version="1.0" encoding="utf-8"?>
<!-- Optional: Custom player controls layout -->
<!-- Place this file in res/layout/custom_player_controls.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="@drawable/gradient_bottom"
    android:paddingTop="8dp"
    android:paddingBottom="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Progress Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:includeFontPadding="false"
            android:paddingEnd="8dp"/>

        <androidx.media3.ui.DefaultTimeBar
            android:id="@id/exo_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:played_color="@color/exo_red"
            app:scrubber_color="@color/exo_red"
            app:buffered_color="#CCFFFFFF"
            app:unplayed_color="#33FFFFFF"/>

        <TextView
            android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:includeFontPadding="false"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Rewind Button -->
        <ImageButton
            android:id="@id/exo_rew"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/exo_icon_rewind"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:contentDescription="Rewind"
            android:padding="8dp"/>

        <!-- Previous Button -->
        <ImageButton
            android:id="@id/exo_prev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/exo_icon_previous"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:contentDescription="Previous"
            android:padding="8dp"/>

        <!-- Play/Pause Button -->
        <ImageButton
            android:id="@id/exo_play_pause"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/exo_icon_play"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:contentDescription="Play/Pause"
            android:padding="12dp"/>

        <!-- Next Button -->
        <ImageButton
            android:id="@id/exo_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/exo_icon_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:contentDescription="Next"
            android:padding="8dp"/>

        <!-- Fast Forward Button -->
        <ImageButton
            android:id="@id/exo_ffwd"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/exo_icon_fastforward"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:contentDescription="Fast Forward"
            android:padding="8dp"/>

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <!-- Fullscreen Button -->
        <ImageButton
            android:id="@id/exo_fullscreen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/exo_icon_fullscreen_enter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:contentDescription="Fullscreen"
            android:padding="8dp"/>
    </LinearLayout>

</LinearLayout>